{
  "compilerOptions": {
    "target": "ES2020", //voila c'est bien
    "useDefineForClassFields": true,
    "module": "ESNext", 
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": false, //siuu modif
    "noUnusedLocals": false, //siuu modif
    "noUnusedParameters": false, //siuu modif
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"], //ca c;est bien les autres faut le degager vous encombrer pas
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"]
    },
    // âœ… Ajouter les types pour Vite
    "types": ["vite/client"]
  },
  "include": ["src", "vite.config.ts", "src/vite-env.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}